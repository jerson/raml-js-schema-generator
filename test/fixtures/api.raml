#%RAML 0.8
 
title: World Music API
baseUri: http://example.api.com/{version}
version: v1
traits:
  - paged:
      queryParameters:
        pages:
          description: The number of pages to return
          type: number
schemas:
 - actor: !include ../../test/fixtures/actor.schema
 - genre: !include ../../test/fixtures/genre.schema
 - movie: !include ../../test/fixtures/movie.schema
 - news: !include ../../test/fixtures/news.schema
 - autor: !include ../../test/fixtures/autor.schema
/news:
  post:
  /{newsId}:
    get:
      responses:
        200:
          body:
            application/json:
              schema: |
                { "$schema": "http://json-schema.org/schema",
                  "type": "object",
                  "description": "A canonical song",
                  "properties": {
                    "title":  { "type": "string" },
                    "body": { "type": "string" }
                  },
                  "required": [ "title", "body" ]
                }